<% if not flash.empty? %>
  <% flash.each do |type, msg| %>
    <% case type %>
      <% when "success" %>
        <% color = "green lighten-2" %>
      <% when "danger" %>
        <% color = "red lighten-2" %>
      <% when "notice" %>
        <% color = "blue lighten-2" %>
      <% else %>
        <% color = "black lighten-2" %>
    <% end %>
    <script>
      $(function() {
        Materialize.toast("<%= msg %>", 4000, "<%= color %>");
      });
    </script>    
  <% end %>
<% end %>