<h1>Spiele im Überblick</h1>

<table class="bordered striped highlight responsive-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Erstellt</th>
      <th>Ansehen</th>
      <th>Löschen</th>
    </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td>
            <%= link_to game.name, edit_admin_game_path(game.id) %>
          </td>
          <td>
            <%= game.created_at.strftime('%d.%m.%Y') %>
          </td>
          <td>
            <%= link_to game_path(game), { :class => 'btn-floating purple lighten-1 waves-effect waves-light' } do %>
              <i class="material-icons">open_in_browser</i>
            <% end %>
          </td>
          <td>
            <%= link_to admin_game_path(game), method: :delete, data: { confirm: "Bist Du sicher, dass du #{game.name} löschen willst?" } do %>
              <span class="btn-floating purple lighten-1 waves-effect waves-light"><i class='material-icons'>delete</i></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>