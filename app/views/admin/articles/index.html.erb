<h1>News im Überblick</h1>

<table class="bordered striped highlight responsive-table">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Erstellt</th>
      <th>Ansehen</th>
      <th>Löschen</th>
    </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
            <%= link_to article.title, edit_admin_article_path(article) %>
          </td>
          <td>
            <%= article.created_at.strftime('%d.%m.%Y') %>
          </td>
          <td>
            <%= link_to article_path(article), { :class => 'btn-floating purple lighten-1 waves-effect waves-light' } do %>
              <i class="material-icons">open_in_browser</i>
            <% end %>
          </td>
          <td>
            <%= link_to admin_article_path(article), method: :delete, data: { confirm: "Bist Du sicher, dass du #{article.title} löschen willst?" } do %>
              <span class="btn-floating purple lighten-1 waves-effect waves-light"><i class='material-icons'>delete</i></span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
</table>