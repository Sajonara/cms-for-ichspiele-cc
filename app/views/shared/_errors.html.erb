<% if obj.errors.any? %>
  <div class="card red lighten-4">
    <div class="card-content">
      <%= link_to( eval(path) + "/#", html_options = { class: 'right', data: { dismiss: 'card' } }) do %>
        &#215;
      <% end %>
      <h5>Es sind folgende Fehler aufgetreten:</h5>
      <ul>
        <% obj.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>